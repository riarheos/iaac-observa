global:
  scrape_interval:     15s
  evaluation_interval: 15s

alerting:
  alertmanagers:
  - static_configs:
    - targets: ['localhost:9093']

# Load rules once and periodically evaluate them according to the global 'evaluation_interval'.
rule_files: []
  # - "first_rules.yml"
  # - "second_rules.yml"

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

{% for host in pillar['yacloud']['salt-minion'] %}
  - job_name: {{ host['fqdn'] }}
    static_configs:
      - targets:
        - '{{ host['fqdn'] }}:9100'
        - '{{ host['fqdn'] }}:9113'
{% endfor %}
